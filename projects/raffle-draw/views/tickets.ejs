<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tickets</title>
    <link rel="stylesheet" href="./style.css" />
  </head>
  <body>
    <div class="container">
      <div class="btn-group">
        <a href="/" class="btn btn-info">Home</a>
        <a href="/tickets/draw" class="btn btn-danger">Draw</a>
        <a href="/tickets/buy" class="btn btn-primary">Buy Ticket</a>
      </div>
      <h2>Tickets</h2>
      <table class="details-table">
        <thead>
          <tr>
            <th>Number</th>
            <th>Username</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% for (const ticket of tickets) { %>
          <tr>
            <td>
              <strong
                ><a href="/tickets/t/<%= ticket.id %>"
                  ><%= ticket.id %></a
                ></strong
              >
            </td>
            <td>
              <strong
                ><a href="/tickets/u/<%= ticket.username %>"
                  ><%= ticket.username %></a
                ></strong
              >
            </td>
            <td class="text-right"><%= ticket.price %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
